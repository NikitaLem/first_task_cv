.software
    margin-top 4.8vw
    &__header
        @extends $header
        &__circle
            @extends $circles
            background-image url("../src/images/Software_img.png")
            &:before
                @extends $circles_before
        &__name
            @extends $header_names
        &__line
            @extends $header_lines
    &__body
        display flex
        justify-content space-between
        margin-top 3.1vw
        &__left,
        &__right
            flex-basis 22.3vw
            justify-content start
            flex-direction column
            &__wrapper
                margin-top 2.21vw
                &__name
                    font-family 'MyriadPro Regular'
                    font-size 2.07vw
                &__level
                    display flex
                    flex-wrap nowrap
                    margin-top 1.41vw
                    .full_photoshop
                        @extends $software_level
                        background-color #3d6cb0
                        width 95%
                    .full_illustrator
                        @extends $software_level
                        background-color #3d6cb0
                        width 70%
                    .full_indesign
                        @extends $software_level
                        background-color #3d6cb0
                        width 50%
                    .full_dreamweaver
                        @extends $software_level
                        background-color #3d6cb0
                        width 85%
                    .full_aftereffects
                        @extends $software_level
                        background-color #3d6cb0
                        width 60%
                    .full_htmlcss
                        @extends $software_level
                        background-color #3d6cb0
                        width 95%
                    .empty
                        @extends $software_level
                        background-color #e6e6e6
                        flex-grow 1
                &_first
                    margin-top 0