.names
  display flex
  align-items center
  flex-direction column
  text-transform uppercase

  &__circle
    flex-shrink 0
    background-color #3d6cb0
    border-radius 50%
    position relative
    height 22rem
    width 22rem
    @media only screen and (max-width: 768px)
      height 18rem
      width 18rem

    &:before
      content " "
      position absolute
      z-index 1
      top -7%
      left -7%
      right -7%
      bottom -7%
      border 1px solid #3d6cb0
      border-radius 50%

  &__list
    text-align center
    margin-top 4.27vw

  &__first-name
    font-family 'Myriad Pro SemiExtended', Arial, sans-serif
    font-weight 300
    font-style normal
    font-size 5.68rem
    line-height 0.71

  &__surname
    font-weight 700
    font-size 6.72rem
    line-height 0.71
    margin-top 1.169vw

  &__vacancy
    font-family 'MyriadPro SemiCn', Arial, sans-serif
    font-weight 900
    font-style normal
    font-size 2.7rem
    margin-top 1.85vw
    line-height 0.71