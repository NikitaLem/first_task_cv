@import "../header/header.styl"

.skills
  &__item
    margin-top 1.81vw
  &__name
    text-align center
    font-size 2.79rem
    padding-bottom 0.887vw
    text-transform uppercase
  &__value
    display flex
    justify-content space-between
    margin 0
    padding 0
    width 35.21rem
    @media only screen and (max-width: 768px)
      width 400px
    @media only screen and (max-width: 580px)
      width 320px
.value__circle
  border-radius 50%
  background-color #e6e6e6
  height 1.9rem
  width 1.9rem
.value__circle_full
  background-color #3d6cb0