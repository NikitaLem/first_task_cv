.header
  display flex
  align-items center
  justify-content space-between
  &__circle
    flex-shrink 0
    background-color #3d6cb0
    border-radius 50%
    position relative                                          
    background-repeat no-repeat
    background-position 50% 50%
    background-size 60% auto
    height 6.5em
    width 6.5em
    &:before
      top -6%
      left -6%
      right -6%
      bottom -6%
      border-width 1px
      content " "
      position absolute
      z-index 1
      border 1px solid #3d6cb0
      border-radius 50%
    &_for-profile
      background-image url("images/Profile_img.jpg")
    &_for-contact
      background-image url("images/Contact_img.jpg")
    &_for-skills
      background-image url("images/Skills_img.jpg")
    &_for-education
      background-image url("images/Education_img.jpg")
    &_for-experience
      background-image url("images/Experience_img.jpg")
    &_for-software
      background-image url("images/Software_img.jpg")
  &__name
    font-family "MyriadPro", Arial, sans-serif
    font-weight 700
    font-style normal
    font-size 4.78rem
    color #3d6cb0
    padding-left 15px
    text-transform uppercase
  &__line
    margin 0 0 0 10px
    height 5px
    flex-grow 1
    background-color #3d6cb0