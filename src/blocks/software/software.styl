@import "../header/header.styl"

$software_level
  display inline-block
  height 1.77vw
  @media only screen and (max-width: 768px)
    height 1.7em

.software

  &__name
    font-size 2.79rem
    text-transform uppercase

  &__level
    display flex
    flex-wrap nowrap
    margin-top 1.41vw

    &_empty
      @extends $software_level
      background-color #e6e6e6
      flex-grow 1

    &_full
      @extends $software_level
      background-color #3d6cb0
      flex-basis 1%