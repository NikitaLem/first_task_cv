@import "../../variables/style-variables.styl"
@import "../header/header.styl"

$software_level
  display inline-block
  height 1.77vw
  @media only screen and (max-width: 768px)
    height 1.7em

.software

  &__name
    font-size 2.79rem
    text-transform uppercase
    padding 0
    margin 0

  &__level-container
    display flex
    flex-wrap nowrap
    margin-top 1.41vw

  &__level
    @extends $software_level
    background-color $main-color

  &__level-filler
    background-color #e6e6e6
    flex-grow 1