@import "../header/header.styl"

$software_level
  display inline-block
  height 1.77vw
  @media only screen and (max-width: 768px)
    height 1.7em

.software
  &__body
    display flex
    justify-content space-between
    margin-top 3.1vw
    @media only screen and (max-width: 768px)
      justify-content space-around
    &_left,
    &_right
      flex-basis 22.3vw
      justify-content start
      flex-direction column
      @media only screen and (max-width: 768px)
        flex-basis 40%
  &__item
    margin-top 2.21vw
    &_first
      margin-top 0
  &__name
    font-size 2.79rem
    text-transform uppercase
  &__level
    display flex
    flex-wrap nowrap
    margin-top 1.41vw
    &_empty
      @extends $software_level
      background-color #e6e6e6
      flex-grow 1
    &_95-of-full
      @extends $software_level
      background-color #3d6cb0
      width 95%
    &_70-of-full
      @extends $software_level
      background-color #3d6cb0
      width 70%
    &_50-of-full
      @extends $software_level
      background-color #3d6cb0
      width 50%
    &_85-of-full
      @extends $software_level
      background-color #3d6cb0
      width 85%
    &_60-of-full
      @extends $software_level
      background-color #3d6cb0
      width 60%