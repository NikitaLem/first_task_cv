@import "../header/header.styl"

.contact

  &__item
    display flex
    margin-top 2.98vw
    @media only screen and (max-width: 768px)
      justify-content space-around

    &_first
      margin-top 3.0645vw

  &__name
    color #3d6cb0
    font-weight 700
    font-size 2.24rem
    flex-basis 30%
    text-transform uppercase

  &__value
    flex-basis 70%
    font-size 2.24rem
    