@import "../../variables/style-variables.styl"
@import "../header/header.styl"

.contact

  &__item
    display flex
    margin-top 2.98vw
    @media only screen and (max-width: 768px)
      justify-content space-around

  &__name
    color $main-color
    font-weight 700
    font-size 2.24rem
    flex-basis 30%
    text-transform uppercase

  &__value
    flex-basis 70%
    font-size 2.24rem
    text-decoration none
    color #000
      
    &_link
      &:hover
        color $main-color